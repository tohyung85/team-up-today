<h1>Edit User Profile</h1>

<%= simple_form_for @profile do |f| %>
  <%= f.input :avatar %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :group_type_interests, as: :check_boxes, collection: Profile::CATEGORIES %>
  <h3>Languages</h3>
  <div id='languages'>
    <%= f.simple_fields_for :languages do |language| %>
      <%= render 'language_fields', f: language %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add language', f, :languages %>
    </div>
  </div>

  <%= f.submit 'Update' %>
<% end %>